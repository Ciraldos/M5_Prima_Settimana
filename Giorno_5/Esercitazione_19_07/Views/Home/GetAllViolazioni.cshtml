@model IEnumerable<Esercitazione_19_07.Models.Violazione>

@{
    ViewData["Title"] = "Elenco delle violazioni";
}

<link rel="stylesheet" href="~/css/GetAllViolazioni.css" />

<div class="container">
    <div class="table-container">
        <h1 class="text-black">Elenco delle violazioni</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-black">
                        Identificativo Violazione
                    </th>
                    <th class="text-black">
                        @Html.DisplayNameFor(model => model.Descrizione)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdViolazione)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descrizione)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
