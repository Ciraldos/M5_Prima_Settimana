@model Esercitazione_19_07.Models.Verbale

@{
    ViewData["Title"] = "Registra un nuovo verbale";
}

<h1>Registra un nuovo verbale</h1>

<h5 class="my-3">Inserisci i dati</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVerbale">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Nominativo_Agente" class="control-label">Nominativo Agente</label>
                <input asp-for="Nominativo_Agente" class="form-control" />
                <span asp-validation-for="Nominativo_Agente" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="IndirizzoViolazione" class="control-label">Indirizzo Violazione</label>
                <input asp-for="IndirizzoViolazione" class="form-control" />
                <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DataViolazione" class="control-label">Data Violazione</label>
                <input asp-for="DataViolazione" class="form-control" />
                <span asp-validation-for="DataViolazione" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="DataTrascrizioneVerbale" class="control-label">Data Trascrizione Verbale</label>
                <input asp-for="DataTrascrizioneVerbale" class="form-control" />
                <span asp-validation-for="DataTrascrizioneVerbale" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DecurtamentoPunti" class="control-label">Decurtamento Punti</label>
                <input asp-for="DecurtamentoPunti" class="form-control" />
                <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Importo" class="control-label"></label>
                <input asp-for="Importo" class="form-control" />
                <span asp-validation-for="Importo" class="text-danger"></span>
            </div>
           
            <div class="form-group mt-2">
                <label asp-for="FK_Violazione" class="control-label">Chiave Esterna Violazione</label>
                <input asp-for="FK_Violazione" class="form-control" />
                <span asp-validation-for="FK_Violazione" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FK_Anagrafica" class="control-label">Chiave Esterna Anagrafica</label>
                <input asp-for="FK_Anagrafica" class="form-control" />
                <span asp-validation-for="FK_Anagrafica" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
