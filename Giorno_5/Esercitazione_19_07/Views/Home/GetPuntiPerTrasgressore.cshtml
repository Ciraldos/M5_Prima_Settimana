@model IEnumerable<Esercitazione_19_07.Models.VerbaleTrasgressore>

@{
    ViewData["Title"] = "Punti Patente Decurtati";
}

<h1>Punti Decurtati Per Trasgressore</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trasgressore)
            </th>
            <th>
                <h1>Punti Decurtati</h1>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trasgressore)
                </td>
